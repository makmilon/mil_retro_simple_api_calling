<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/memeImage"
        android:layout_width="265dp"
        android:layout_height="188dp"
        android:layout_marginTop="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />

    <TextView
        android:id="@+id/memeAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/memeImage"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/memeImage"
        app:layout_constraintTop_toBottomOf="@+id/memeImage" />

    <TextView
        android:id="@+id/memeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/memeAuthor"
        app:layout_constraintStart_toStartOf="@+id/memeAuthor"
        app:layout_constraintTop_toBottomOf="@+id/memeAuthor" />

    <Button
        android:id="@+id/memeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="@+id/memeTitle"
        app:layout_constraintStart_toStartOf="@+id/memeTitle"
        app:layout_constraintTop_toBottomOf="@+id/memeTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>